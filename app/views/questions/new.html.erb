<h1>New questions</h1>

<%= form_with model: @question do |f| %>
    <div>
        <%= f.label  :title %>
        <%= f.text_field :title, required: true, minlengyh: 2, placeholder: 'title'  %>
    </div>
    <div>
        <%= f.label  :body %>
        <%= f.text_area :body, required: true, minlengyh: 2, placeholder: 'body'  %>
    </div>
    <%= f.submit 'Submit question'%>
<% end %>